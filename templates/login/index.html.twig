<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Tableau de bord membre</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            background-color: #f5f5f5;
        }

        #userInfo {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        #extraInfo {
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        #extraInfo input {
            padding: 10px;
            width: 250px;
            margin-right: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        #extraInfo button {
            padding: 10px 15px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        #extraInfo button:hover {
            background-color: #218838;
        }

        #actions button {
            padding: 15px 25px;
            margin-right: 15px;
            margin-bottom: 10px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
        }

        #actions button:hover {
            background-color: #0069d9;
        }

        #loginBtn, #logoutBtn {
            padding: 10px 20px;
            margin-bottom: 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        #loginBtn {
            background-color: #db4437;
            color: #fff;
        }

        #loginBtn:hover {
            background-color: #c1351d;
        }

        #logoutBtn {
            background-color: #6c757d;
            color: #fff;
        }

        #logoutBtn:hover {
            background-color: #5a6268;
        }
    </style>
</head>
<body>

    <!-- Boutons de connexion / déconnexion -->
    <button id="loginBtn">Se connecter avec Google</button>
    <button id="logoutBtn" style="display:none;">Déconnexion</button>

    <!-- Infos du membre -->
    <div id="userInfo"></div>

    <!-- Formulaire pour ajouter le téléphone 
    <div id="extraInfo" style="display:none;">
        <input type="text" id="phone" placeholder="Numéro de téléphone">
        <button id="savePhoneBtn">Enregistrer</button>
    </div>-->

    <!-- Boutons actions du membre -->
    <div id="actions" style="display:none;">
        <button id="btnVendre">Vendre</button>
        <button id="btnAcheter">Acheter</button>
        <button id="btnHistorique">Historique</button>
    </div>

    <!-- Script JS -->
    <script type="module" src="/main.js"></script>

</body>
</html>
